# Database Configuration
# Options: sqlite, mariadb
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
SQLITE_DB_PATH=git_history.db

# MariaDB Configuration (used when DB_TYPE=mariadb)
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=your_password
MARIADB_DATABASE=git_history

# Git Credentials
GIT_USERNAME=your_git_username
GIT_PASSWORD=your_git_password_or_token

# Clone Directory
CLONE_DIR=./repositories
